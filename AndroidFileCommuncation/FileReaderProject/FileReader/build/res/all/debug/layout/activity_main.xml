<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/typeFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/enter_name_here"
        android:ems="9"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/numberItens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numbers_of_itens"
        android:layout_below="@id/typeFileName"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/numberItensLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Itens:"
        android:layout_below="@id/typeFileName"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberItens"
        android:textAlignment="center"
        android:text="@string/sum"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/sumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sum:"
        android:layout_below="@id/numberItens"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:onClick="onClick"
        android:layout_below="@id/sum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>
