<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="8dip"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn1_red"
            android:text="Off"
            android:textColor="@color/black"
            android:background="@color/red_off"
            android:layout_height="80dp"
            android:layout_width="120dp"
            android:layout_margin="8dip"
            android:onClick="onClick"
            />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn1_yellow"
            android:text="Off"
            android:textColor="@color/black"
            android:background="@color/yellow_off"
            android:layout_height="80dp"
            android:layout_width="120dp"
            android:layout_margin="8dip"
            android:onClick="onClick"
            />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn1_green"
            android:text="Off"
            android:textColor="@color/black"
            android:background="@color/green_off"
            android:layout_height="80dp"
            android:layout_width="120dp"
            android:layout_margin="8dip"
            android:onClick="onClick"
            />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/result"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:typeface="monospace"
                android:padding="4dip"
                />
        </ScrollView>

    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:padding="10dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_blink"
            android:background="@color/white"
            android:textColor="@color/black"
            android:text="@string/blink"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center"
            android:padding="5dp"
            android:layout_margin="8dp"

            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btn_turnOnOff"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:text="@string/turnOnOff"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_toRightOf="@id/btn_blink"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:onClick="onClick"
            />

    </RelativeLayout>

</LinearLayout>
