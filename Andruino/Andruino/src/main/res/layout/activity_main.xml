<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="8dip"
    >

    <Button
        android:id="@+id/button_turnOn_bluetooth"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/turnOn_bluetooth"
        android:onClick="turnOnBluetooth"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button_turnOff_bluetooth"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/turnOff_bluetooth"
        android:onClick="turnOffBluetooth"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button_search_device"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/search_device"
        android:onClick="discoverDevice"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />

</LinearLayout>